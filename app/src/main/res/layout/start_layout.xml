<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:background="#263238"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".Home">

    <TextView
        android:id="@+id/shapeT"
        android:text="Shape"
        android:textColor="#DD2C00"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/match"
        android:text="Match"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/color"
        android:text="Color"
        android:textColor="#DD2C00"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">



        <ImageButton
            android:id="@+id/rate_button"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_action_good"
            android:layout_marginBottom="20dp"
            android:background="@drawable/start"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:id="@+id/centerLayout"
            android:layout_width="wrap_content"
            android:layout_below="@+id/rate_button"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp">

            <ImageButton
                android:id="@+id/leaderBoardButton"
                android:layout_width="80dp"
                android:layout_height="69dp"
                android:src="@drawable/leader_icon"
                android:background="@drawable/start"
                android:layout_marginBottom="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                />

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_action_play"
                android:background="@drawable/button"
                android:layout_centerHorizontal="true"/>

            <ImageButton
                android:id="@+id/checkAchievement_button"
                android:layout_width="80dp"
                android:src="@drawable/ic_action_important"
                android:layout_height="65dp"
                android:background="@drawable/start"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            </RelativeLayout>



        <com.google.android.gms.common.SignInButton
            android:id="@+id/signinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/centerLayout"
            android:layout_centerHorizontal="true"
            />







    </RelativeLayout>

    <TextView
        android:id="@+id/copyright"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="NezSpencer 2015"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
